public void setAccountRating(Account a) {
    //code here
    if(a.AnnualRevenue <= 1000000){
        a.Rating = 'Cold';
    }
    else if(a.AnnualRevenue <= 500000 && a.AnnualRevenue >= 1000000){
        a.Rating = 'Warm';
    }
    else if(a.AnnualRevenue > 500000){
        a.Rating = 'Hot';
    }
}